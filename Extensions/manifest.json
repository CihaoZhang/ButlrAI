{
  "manifest_version": 2,
  "name": "Botlr",
  "version": "1.0",
  "description": "An AI assistant for Gmail that can filter, summarize, and schedule emails.",
  "icons": {
    "48": "icons/imresizer-1710577736535.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://openai.com/*"
  ],
  "browser_action": {
    "default_icon": "icons/imresizer-1710577736535.png",
    "default_title": "Email AI Assistant",
    "default_popup": "index.html"
  }
}