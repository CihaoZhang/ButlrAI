{
    "manifest_version": 2,
    "name": "Email AI Assistant",
    "version": "1.0",
    "description": "An AI assistant for Gmail that can filter, mark, and categorize emails.",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "activeTab",
      "storage",
      "https://mail.google.com/*"
    ]
  }